{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"messages": {
		"$i18n": "locales.yml"
	},
	"title": {
		"$ref": "#/messages/deploy.title"
	},
	"description": {
		"$ref": "#/messages/deploy.description"
	},
	"longDescription": {
		"$ref": "#/messages/deploy.longDescription"
	},
	"type": "object",
	"properties": {
		"prod-region": {
			"description": "The bluemix region",
			"type": "string"
		},
		"prod-organization": {
			"description": "The bluemix org",
			"type": "string"
		},
		"prod-space": {
			"description": "The bluemix space",
			"type": "string"
		},
		"prod-app-name": {
			"description": {
				"$ref": "#/messages/deploy.appDescription"
			},
			"type": "string",
			"pattern": "\\S"
		}
	},
	"required": [
		"cloud-region",
		"prod-app-name"
	],
	"form": [
		{
			"type": "validator",
			"url": "/devops/setup/bm-helper/helper.html"
		},
		{
			"type": "text",
			"readonly": false,
			"title": {
				"$ref": "#/messages/deploy.appName"
			},
			"key": "prod-app-name"
		},
		{
			"type": "table",
			"columnCount": 4,
			"widths": [
				"15%",
				"28%",
				"28%",
				"28%"
			],
			"items": [
				{
					"type": "label",
					"title": ""
				},
				{
					"type": "label",
					"title": {
						"$ref": "#/messages/region"
					}
				},
				{
					"type": "label",
					"title": {
						"$ref": "#/messages/organization"
					}
				},
				{
					"type": "label",
					"title": {
						"$ref": "#/messages/space"
					}
				},
				{
					"type": "label",
					"title": {
						"$ref": "#/messages/prodStage"
					}
				},
				{
					"type": "text",
					"key": "cloud-region",
					"readonly": true
				},
				{
					"type": "text",
					"key": "org-name",
					"readonly": true
				},
				{
					"type": "text",
					"key": "space-name",
					"readonly": true
				}
			]
		}
	]
}
